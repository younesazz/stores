generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  TENANT_USER
  CUSTOMER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String    // Required for credentials auth
  firstName     String    // Required - NOT optional
  lastName      String    // Required - NOT optional
  phone         String    // Required - NOT optional
  role          UserRole  @default(TENANT_ADMIN)
  emailVerified DateTime?
  image         String?
  tenantId      String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  tenant        Tenant?   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orders        Order[]
  accounts      Account[]
  sessions      Session[]
  
  @@index([email])
  @@index([tenantId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// TENANT (CLIENT)
// ============================================

enum TenantStatus {
  ACTIVE
  SUSPENDED
  TRIAL
  CANCELLED
}

model Tenant {
  id          String        @id @default(cuid())
  name        String
  subdomain   String        @unique
  email       String
  phone       String
  status      TenantStatus  @default(TRIAL)
  
  planId      String?
  trialEndsAt DateTime?
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  users       User[]
  stores      Store[]
  
  @@index([subdomain])
  @@index([status])
}

// ============================================
// STORE
// ============================================

model Store {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  subdomain   String   @unique
  description String?
  logo        String?
  favicon     String?
  
  primaryColor    String  @default("#000000")
  secondaryColor  String  @default("#ffffff")
  accentColor     String  @default("#0066cc")
  fontFamily      String  @default("Inter")
  
  isActive        Boolean @default(true)
  currency        String  @default("DZD")
  taxRate         Float   @default(0)
  
  metaTitle       String?
  metaDescription String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  tenant          Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  categories      Category[]
  products        Product[]
  orders          Order[]
  shippingSettings ShippingSetting[]
  
  @@index([tenantId])
  @@index([subdomain])
  @@index([isActive])
}

// ============================================
// WILAYA & COMMUNE (Algerian Locations)
// ============================================

model Wilaya {
  id        Int       @id @default(autoincrement())
  code      String    @unique
  name      String
  nameAr    String
  
  communes  Commune[]
  orders    Order[]
  shippingRates ShippingRate[]
  
  @@index([code])
}

model Commune {
  id        Int     @id @default(autoincrement())
  wilayaId  Int
  code      String  @unique
  name      String
  nameAr    String
  postalCode String?
  
  wilaya    Wilaya  @relation(fields: [wilayaId], references: [id])
  orders    Order[]
  
  @@index([wilayaId])
  @@index([code])
}

// ============================================
// PRODUCTS & CATEGORIES
// ============================================

model Category {
  id          String    @id @default(cuid())
  storeId     String
  name        String
  slug        String
  description String?
  image       String?
  parentId    String?
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  store       Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]
  
  @@unique([storeId, slug])
  @@index([storeId])
  @@index([parentId])
}

enum ProductStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Product {
  id          String        @id @default(cuid())
  storeId     String
  categoryId  String?
  
  name        String
  slug        String
  description String?
  price       Float
  comparePrice Float?
  costPrice   Float?
  
  sku         String?
  barcode     String?
  
  trackInventory Boolean @default(true)
  quantity       Int     @default(0)
  lowStockAlert  Int?
  
  images      String[]
  featuredImage String?
  
  metaTitle       String?
  metaDescription String?
  
  status      ProductStatus @default(DRAFT)
  isFeatured  Boolean       @default(false)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  store       Store         @relation(fields: [storeId], references: [id], onDelete: Cascade)
  category    Category?     @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  variants    ProductVariant[]
  
  @@unique([storeId, slug])
  @@index([storeId])
  @@index([categoryId])
  @@index([status])
  @@index([sku])
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  name        String
  sku         String?
  price       Float?
  quantity    Int      @default(0)
  image       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@index([productId])
  @@index([sku])
}

// ============================================
// ORDERS
// ============================================

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CASH_ON_DELIVERY
  BANK_TRANSFER
  CCP
  CARD
}

model Order {
  id              String        @id @default(cuid())
  storeId         String
  customerId      String?
  orderNumber     String        @unique
  
  customerName    String
  customerEmail   String?
  customerPhone   String
  
  wilayaId        Int
  communeId       Int
  address         String
  
  subtotal        Float
  shippingCost    Float         @default(0)
  tax             Float         @default(0)
  discount        Float         @default(0)
  total           Float
  
  orderStatus     OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  paymentMethod   PaymentMethod @default(CASH_ON_DELIVERY)
  
  shippingProvider String?
  trackingNumber   String?
  shippedAt        DateTime?
  deliveredAt      DateTime?
  
  customerNotes   String?
  internalNotes   String?
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  store           Store         @relation(fields: [storeId], references: [id], onDelete: Cascade)
  customer        User?         @relation(fields: [customerId], references: [id])
  wilaya          Wilaya        @relation(fields: [wilayaId], references: [id])
  commune         Commune       @relation(fields: [communeId], references: [id])
  items           OrderItem[]
  statusHistory   OrderStatusHistory[]
  
  @@index([storeId])
  @@index([customerId])
  @@index([orderStatus])
  @@index([paymentStatus])
  @@index([orderNumber])
  @@index([wilayaId])
  @@index([communeId])
  @@index([createdAt])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  
  name        String
  sku         String?
  price       Float
  quantity    Int
  subtotal    Float
  
  image       String?
  
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id])
  
  @@index([orderId])
  @@index([productId])
}

model OrderStatusHistory {
  id          String      @id @default(cuid())
  orderId     String
  status      OrderStatus
  notes       String?
  
  createdAt   DateTime    @default(now())
  
  order       Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  @@index([orderId])
}

// ============================================
// SHIPPING INTEGRATION
// ============================================

enum ShippingProvider {
  YALIDINE
  GUEPEX
  ZR_EXPRESS
}

model ShippingSetting {
  id          String           @id @default(cuid())
  storeId     String
  provider    ShippingProvider
  
  apiKey      String
  apiSecret   String?
  isActive    Boolean          @default(true)
  
  settings    Json?
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  store       Store            @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  @@unique([storeId, provider])
  @@index([storeId])
}

model ShippingRate {
  id          String   @id @default(cuid())
  storeId     String
  wilayaId    Int
  
  baseRate    Float
  perKgRate   Float?
  
  minDays     Int?
  maxDays     Int?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  wilaya      Wilaya   @relation(fields: [wilayaId], references: [id])
  
  @@index([wilayaId])
}

// ============================================
// ANALYTICS & REPORTING
// ============================================

model Analytics {
  id          String   @id @default(cuid())
  storeId     String
  date        DateTime
  
  visitors    Int      @default(0)
  pageViews   Int      @default(0)
  orders      Int      @default(0)
  revenue     Float    @default(0)
  
  createdAt   DateTime @default(now())
  
  @@unique([storeId, date])
  @@index([storeId])
  @@index([date])
}